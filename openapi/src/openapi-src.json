                "x-requests": {
                    "400": {
                        "requestBody": {
                            "content": {
                                "application/vnd.api+json": {
                                    "example": {
                                        "data": {
                                            "THIS-IS-NOT-A-VALID-PROPERTY-NAME": {
                                                "templateName": "sexual-assault"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "auth": false
                    },
                    "403": {
                        "x-scopes": ["create:dummy-resource"]
                    },
                    "404": {
