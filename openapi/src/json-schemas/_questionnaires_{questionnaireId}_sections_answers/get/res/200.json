{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["data", "meta"],
    "properties": {
        "data": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["type", "id", "attributes"],
                "properties": {
                    "type": {
                        "const": "answers"
                    },
                    "id": {
                        "type": "string",
                        "pattern": "^[a-z0-9]{1,30}(--[a-z0-9]{1,30})?(-[a-z0-9]{1,30})*$"
                    },
                    "attributes": {
                        "type": "object"
                    }
                }
            }
        },
        "meta": {
            "type": "object",
            "properties": {
                "questionnaireDocumentVersion": {
                    "type": "string"
                },
                "onComplete": {
                    "type": "object"
                },
                "origin": {
                    "type": "string",
                    "enum": ["WEB", "TEL"]
                }
            }
        }
    }
}
