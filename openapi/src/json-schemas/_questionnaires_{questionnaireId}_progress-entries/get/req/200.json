{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": ["data"],
    "properties": {
        "data": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "id", "attributes", "relationships", "included", "links"],
            "properties": {
                "type": {
                    "const": "progress-entries"
                },
                "id": {
                    "type": "string",
                    "pattern": "^[a-z0-9]{1,30}(--[a-z0-9]{1,30})?(-[a-z0-9]{1,30})*$"
                },
                "attributes": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["sectionId"],
                    "properties": {
                        "sectionId": {
                            "type": "string",
                            "pattern": "^[a-z0-9]{1,30}(-[a-z0-9]{1,30})*$"
                        }
                    }
                },
                "relationships": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["section"],
                    "properties": {
                        "section": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": ["data"],
                            "properties": {
                                "data": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "required": ["type", "id"],
                                    "properties": {
                                        "type": {
                                            "type": "string"
                                        },
                                        "id": {
                                            "type": "string",
                                            "pattern": "^[a-z0-9]{1,30}(--[a-z0-9]{1,30})?(-[a-z0-9]{1,30})*$"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "included": {
                    "type": "array"
                },
                "links": {
                    "type": "object"
                }
            }
        },
        "meta": {
            "type": "object"
        }
    }
}
