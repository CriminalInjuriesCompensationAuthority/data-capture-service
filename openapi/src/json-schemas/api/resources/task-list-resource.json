{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Task List resource",
    "allOf": [
        {"$ref": "../json-api-base-resource.json"},
        {
            "properties": {
                "type": {
                    "const": "task-list"
                },
                "id": {
                    "$ref": "../../models/definitions/uuid-v4.json"
                },
                "attributes": {
                    "allOf": [
                        {
                            "required": ["title", "description", "sections"],
                            "additionalProperties": false,
                            "properties": {
                                "title": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "sections": {
                                    "type": "array",
                                    "required": ["id", "title", "tasks"],
                                    "additionalProperties": false,
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string"
                                            },
                                            "title": {
                                                "type": "string"
                                            },
                                            "cond": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            },
                                            "tasks": {
                                                "type": "array",
                                                "required": ["id", "title", "href", "status"],
                                                "additionalProperties": false,
                                                "items": {
                                                    "type": "object",
                                                    "properties": {
                                                        "id": {
                                                            "type": "string"
                                                        },
                                                        "title": {
                                                            "type": "string"
                                                        },
                                                        "cond": {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "href": {
                                                            "type": "string"
                                                        },
                                                        "status": {
                                                            "type": "string"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "labelCompleted": {
                                    "type": "string"
                                },
                                "labelIncomplete": {
                                    "type": "string"
                                },
                                "labelCannotStart": {
                                    "type": "string"
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}
