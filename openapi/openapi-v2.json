    "paths": {
        "/questionnaires": {
            "post": {
                "tags": ["Questionnaires"],
                "summary": "Create a new questionnaire from a specified template",
                "description": "Create a questionnaire",
                "operationId": "createQuestionnaires",
                "parameters": [
                    {
                        "name": "Dcs-Api-Version",
                        "in": "header",
                        "required": true,
                        "description": "The date based version of the requested API",
                        "schema": {
                            "title": "Dcs-Api-Version",
                            "type": "string",
                            "enum": ["2023-05-17"]
                        },
                        "example": "2023-05-17"
                    }
                ],
                "requestBody": {
                    "description": "Questionnaire template id",
                    "required": true,
                    "content": {
                        "application/vnd.api+json": {
                            "schema": {
                                "type": "object",
                                "additionalProperties": false,
                                "required": ["data"],
                                "properties": {
                                    "data": {
                                        "type": "object",
                                        "additionalProperties": false,
                                        "required": ["type", "attributes"],
                                        "properties": {
                                            "type": {
                                                "enum": ["questionnaires"]
                                            },
                                            "attributes": {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "required": ["templateName", "owner"],
                                                "properties": {
                                                    "templateName": {
                                                        "title": "Questionnaire template name",
                                                        "type": "string",
                                                        "pattern": "^[a-z]{1,20}(?:-[a-z]{1,20}){0,10}$"
                                                    },
                                                    "owner": {
                                                        "type": "object",
                                                        "additionalProperties": false,
                                                        "required": ["id", "isAuthenticated"],
                                                        "properties": {
                                                            "id": {
                                                                "title": "Owner Id",
                                                                "type": "string",
                                                                "format": "uri",
                                                                "maxLength": 64,
                                                                "pattern": "^urn:(uuid|fdc:gov.uk:2022):"
                                                            },
                                                            "isAuthenticated": {
                                                                "type": "boolean"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            "example": {
                                "data": {
                                    "type": "questionnaires",
                                    "attributes": {
                                        "templateName": "sexual-assault",
                                        "owner": {
                                            "id": "urn:uuid:f81d4fae-7dec-11d0-a765-00a0c91e6bf6",
                                            "isAuthenticated": true
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/vnd.api+json": {
                                "schema": {
                                    "title": "Questionnaires document",
                                    "allOf": [
                                        {
                                            "title": "Loosely describes the JSON:API document format",
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": ["data"],
                                            "properties": {
                                                "data": {
                                                    "anyOf": [
                                                        {
                                                            "type": "object"
                                                        },
                                                        {
                                                            "type": "array",
                                                            "items": {}
                                                        }
                                                    ]
                                                },
                                                "included": {
                                                    "type": "array",
                                                    "items": {}
                                                },
                                                "links": {
                                                    "type": "object"
                                                },
                                                "meta": {
                                                    "type": "object"
                                                }
                                            }
                                        },
                                        {
                                            "properties": {
                                                "data": {
                                                    "title": "Questionnaire resource",
                                                    "allOf": [
                                                        {
                                                            "title": "Loosely describes the JSON:API resource format",
                                                            "type": "object",
                                                            "additionalProperties": false,
                                                            "required": [
                                                                "type",
                                                                "id",
                                                                "attributes"
                                                            ],
                                                            "properties": {
                                                                "type": {
                                                                    "type": "string"
                                                                },
                                                                "id": {
                                                                    "type": "string",
                                                                    "anyOf": [
                                                                        {
                                                                            "title": "Section Id",
                                                                            "type": "string",
                                                                            "pattern": "^(?:p-?(?:-[a-z0-9]{1,20}){1,20}|system|referrer)$"
                                                                        },
                                                                        {
                                                                            "title": "UUID v4",
                                                                            "type": "string",
                                                                            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
                                                                        },
                                                                        {
                                                                            "description": "Used by dataset endpoint",
                                                                            "enum": ["0"]
                                                                        }
                                                                    ]
                                                                },
                                                                "attributes": {
                                                                    "type": "object",
                                                                    "title": "Any valid resource"
                                                                },
                                                                "relationships": {
                                                                    "type": "object"
                                                                }
                                                            }
                                                        },
                                                        {
                                                            "properties": {
                                                                "type": {
                                                                    "enum": ["questionnaires"]
                                                                },
                                                                "attributes": {
                                                                    "type": "object",
                                                                    "required": [
                                                                        "id",
                                                                        "type",
                                                                        "version",
                                                                        "routes"
                                                                    ],
                                                                    "additionalProperties": false,
                                                                    "properties": {
                                                                        "id": {
                                                                            "title": "UUID v4",
                                                                            "type": "string",
                                                                            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
                                                                        },
                                                                        "type": {
                                                                            "title": "Questionnaire template name",
                                                                            "type": "string",
                                                                            "pattern": "^[a-z]{1,20}(?:-[a-z]{1,20}){0,10}$"
                                                                        },
                                                                        "version": {
                                                                            "title": "semver",
                                                                            "type": "string",
                                                                            "pattern": "^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}$"
                                                                        },
                                                                        "routes": {
                                                                            "type": "object",
                                                                            "required": ["initial"],
                                                                            "properties": {
                                                                                "initial": {
                                                                                    "title": "Section Id",
                                                                                    "type": "string",
                                                                                    "pattern": "^(?:p-?(?:-[a-z0-9]{1,20}){1,20}|system|referrer)$"
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    ]
                                                }
                                            }
                                        }
                                    ]
                                },
                                "example": {
                                    "data": {
                                        "type": "questionnaires",
                                        "id": "todo-p-some-id",
                                        "attributes": {
                                            "sections": {},
                                            "routes": {}
                                        }
                                    }
                                }
                            }
